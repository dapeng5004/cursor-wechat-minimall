/* pages/address-list/address-list.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.retry-btn {
  background-color: #3cc51f;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
}

/* 地址列表 */
.address-list {
  padding: 20rpx;
}

.address-item {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.address-item.default {
  border: 2rpx solid #3cc51f;
}

.address-item.select-mode {
  cursor: pointer;
}

.address-item.select-mode:active {
  background-color: #f0f0f0;
}

/* 默认标识 */
.default-tag {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: #3cc51f;
  color: white;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 地址信息 */
.address-info {
  flex: 1;
}

.address-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.phone {
  font-size: 28rpx;
  color: #666;
}

.address-detail {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.province, .city, .district {
  margin-right: 10rpx;
}

.detail {
  display: block;
  margin-top: 10rpx;
}

/* 操作按钮 */
.address-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.action-btn {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  padding: 10rpx 15rpx;
  border-radius: 6rpx;
  background-color: #f8f8f8;
}

.action-btn:active {
  background-color: #e0e0e0;
}

.action-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666;
}

/* 选择模式 */
.select-indicator {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}

.select-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #ddd;
}

.select-icon.selected {
  background-color: #3cc51f;
  border-color: #3cc51f;
  color: white;
}

/* 添加地址按钮 */
.add-address-btn {
  position: fixed;
  bottom: 40rpx;
  left: 40rpx;
  right: 40rpx;
  background-color: #3cc51f;
  color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(60, 197, 31, 0.3);
}

.add-address-btn:active {
  background-color: #2db815;
}

.add-icon {
  font-size: 36rpx;
  margin-right: 15rpx;
  font-weight: bold;
}

.add-text {
  font-size: 32rpx;
  font-weight: bold;
}