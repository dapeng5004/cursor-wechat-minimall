/* pages/address-edit/address-edit.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 表单容器 */
.form-container {
  background-color: white;
  margin: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

/* 表单区块 */
.form-section {
  border-bottom: 1rpx solid #f0f0f0;
}

.form-section:last-child {
  border-bottom: none;
}

/* 表单项 */
.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  min-height: 100rpx;
}

.form-item:not(:last-child) {
  border-bottom: 1rpx solid #f0f0f0;
}

/* 表单标签 */
.form-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 表单输入框 */
.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  padding: 0;
  margin: 0;
  border: none;
  background: transparent;
}

.form-input::placeholder {
  color: #999;
}

/* 表单文本域 */
.form-textarea {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  padding: 0;
  margin: 0;
  border: none;
  background: transparent;
  min-height: 80rpx;
  line-height: 1.5;
}

.form-textarea::placeholder {
  color: #999;
}

/* 地区选择器 */
.region-picker {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.region-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.region-text.placeholder {
  color: #999;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

/* 开关样式 */
switch {
  transform: scale(0.8);
}

/* 底部操作按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  padding: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  gap: 20rpx;
}

/* 删除按钮 */
.delete-btn {
  flex: 1;
  background-color: #f8f8f8;
  color: #666;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 25rpx;
  text-align: center;
}

.delete-btn:active {
  background-color: #e0e0e0;
}

.delete-btn[disabled] {
  background-color: #f5f5f5;
  color: #ccc;
  border-color: #eee;
}

/* 保存按钮 */
.save-btn {
  flex: 2;
  background-color: #3cc51f;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 25rpx;
  text-align: center;
  font-weight: bold;
}

.save-btn:active {
  background-color: #2db815;
}

.save-btn[disabled] {
  background-color: #ccc;
}