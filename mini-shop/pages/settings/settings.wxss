/* pages/settings/settings.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 用户信息区块 */
.user-section {
  background-color: white;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.user-id {
  font-size: 26rpx;
  color: #999;
}

/* 设置菜单 */
.settings-list {
  background-color: white;
  margin-bottom: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.menu-name {
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 开关样式 */
switch {
  transform: scale(0.8);
}

/* 其他操作 */
.action-list {
  background-color: white;
  margin-bottom: 20rpx;
}

.action-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.action-item:last-child {
  border-bottom: none;
}

.action-left {
  display: flex;
  align-items: center;
}

.action-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.action-name {
  font-size: 30rpx;
  color: #333;
}

.action-right {
  display: flex;
  align-items: center;
}

.version-text {
  font-size: 26rpx;
  color: #999;
  margin-right: 15rpx;
}

.action-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 退出登录 */
.logout-section {
  padding: 40rpx 30rpx;
}

.logout-btn {
  width: 100%;
  background-color: #ff4444;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 30rpx;
  padding: 25rpx;
  text-align: center;
}

.logout-btn:active {
  background-color: #e63939;
} 