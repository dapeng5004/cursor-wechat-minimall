/* pages/mine/mine.wxss */
.container {
  padding: 20rpx;
}

.user-info {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.avatar-section {
  display: flex;
  align-items: center;
  text-align: left;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
}

.user-details {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.user-id {
  font-size: 24rpx;
  color: #999;
}

.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-avatar {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.login-btn {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #3cc51f;
  color: #fff;
  border-radius: 35rpx;
  font-size: 28rpx;
}

.menu-section {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f8f9fa;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  font-size: 24rpx;
  color: #999;
}

.logout-section {
  padding: 40rpx 0;
}

.logout-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #e54d42;
  color: #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
}