/* components/goods-item/goods-item.wxss */
.goods-item {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  transition: all 0.3s;
}

.goods-item:active {
  transform: scale(0.98);
}

/* 商品图片 */
.goods-image {
  position: relative;
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}

.goods-image .image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 标签 */
.tags {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  padding: 4rpx 8rpx;
  background-color: rgba(60, 197, 31, 0.9);
  color: #fff;
  font-size: 20rpx;
  border-radius: 4rpx;
  line-height: 1;
}

/* 商品信息 */
.goods-info {
  padding: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* 商品名称 */
.goods-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 商品描述 */
.goods-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.3;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 价格和库存 */
.price-stock {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.price {
  display: flex;
  align-items: flex-end;
  flex: 1;
}

.price-symbol {
  font-size: 24rpx;
  color: #e54d42;
  font-weight: 500;
  margin-right: 2rpx;
}

.price-value {
  font-size: 32rpx;
  color: #e54d42;
  font-weight: 600;
  line-height: 1;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 8rpx;
}

.stock {
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
}

/* 销量和评分 */
.sales-rating {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.sales {
  font-size: 24rpx;
  color: #999;
}

.rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.rating-text {
  font-size: 24rpx;
  color: #666;
}

.stars {
  display: flex;
  gap: 2rpx;
}

.star {
  font-size: 20rpx;
  color: #ddd;
}

.star.active {
  color: #ffa500;
}

/* 操作按钮 */
.goods-actions {
  padding: 0 20rpx 20rpx;
}

.add-cart-btn {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
  background-color: #3cc51f;
  color: #fff;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-cart-btn:active {
  background-color: #2aad17;
}

.add-cart-btn::after {
  border: none;
}

/* 横向布局样式 */
.goods-item.horizontal {
  flex-direction: row;
  height: 200rpx;
}

.goods-item.horizontal .goods-image {
  width: 200rpx;
  height: 100%;
  flex-shrink: 0;
}

.goods-item.horizontal .goods-info {
  flex: 1;
  height: 100%;
  justify-content: space-between;
}

.goods-item.horizontal .goods-actions {
  padding: 20rpx;
  display: flex;
  align-items: center;
}

.goods-item.horizontal .add-cart-btn {
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 22rpx;
}

/* 小尺寸样式 */
.goods-item.small {
  margin-bottom: 16rpx;
}

.goods-item.small .goods-image {
  height: 240rpx;
}

.goods-item.small .goods-info {
  padding: 16rpx;
}

.goods-item.small .goods-name {
  font-size: 26rpx;
  -webkit-line-clamp: 1;
}

.goods-item.small .price-value {
  font-size: 28rpx;
}

.goods-item.small .add-cart-btn {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 22rpx;
}