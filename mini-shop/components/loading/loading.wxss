/* components/loading/loading.wxss */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
}

.loading-content {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.7);
  border-radius: 8rpx;
  padding: 40rpx;
  min-width: 200rpx;
}

.loading-text {
  color: #fff;
  font-size: 28rpx;
  margin-top: 20rpx;
  text-align: center;
}

/* 旋转加载器 */
.loading-spinner {
  position: relative;
  width: 80rpx;
  height: 80rpx;
}

.spinner-dot {
  position: absolute;
  top: 0;
  left: 50%;
  width: 6rpx;
  height: 20rpx;
  margin-left: -3rpx;
  transform-origin: center 40rpx;
}

.spinner-dot .dot {
  width: 100%;
  height: 100%;
  background-color: #fff;
  border-radius: 3rpx;
  animation: spinner-fade 1.2s linear infinite;
}

.spinner-dot:nth-child(1) .dot { animation-delay: 0s; }
.spinner-dot:nth-child(2) .dot { animation-delay: -0.1s; }
.spinner-dot:nth-child(3) .dot { animation-delay: -0.2s; }
.spinner-dot:nth-child(4) .dot { animation-delay: -0.3s; }
.spinner-dot:nth-child(5) .dot { animation-delay: -0.4s; }
.spinner-dot:nth-child(6) .dot { animation-delay: -0.5s; }
.spinner-dot:nth-child(7) .dot { animation-delay: -0.6s; }
.spinner-dot:nth-child(8) .dot { animation-delay: -0.7s; }
.spinner-dot:nth-child(9) .dot { animation-delay: -0.8s; }
.spinner-dot:nth-child(10) .dot { animation-delay: -0.9s; }
.spinner-dot:nth-child(11) .dot { animation-delay: -1.0s; }
.spinner-dot:nth-child(12) .dot { animation-delay: -1.1s; }

@keyframes spinner-fade {
  0%, 39%, 100% { opacity: 0; }
  40% { opacity: 1; }
}

/* 圆圈加载器 */
.loading-circle {
  width: 80rpx;
  height: 80rpx;
}

.circle {
  width: 100%;
  height: 100%;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid #fff;
  border-radius: 50%;
  animation: circle-spin 1s linear infinite;
}

@keyframes circle-spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 点点加载器 */
.loading-dots {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.loading-dots .dot {
  width: 16rpx;
  height: 16rpx;
  background-color: #fff;
  border-radius: 50%;
  animation: dots-bounce 1.4s ease-in-out infinite both;
}

.loading-dots .dot1 { animation-delay: -0.32s; }
.loading-dots .dot2 { animation-delay: -0.16s; }
.loading-dots .dot3 { animation-delay: 0s; }

@keyframes dots-bounce {
  0%, 80%, 100% {
    transform: scale(0);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 波浪加载器 */
.loading-wave {
  display: flex;
  align-items: flex-end;
  gap: 4rpx;
  height: 60rpx;
}

.wave-bar {
  width: 8rpx;
  height: 20rpx;
  background-color: #fff;
  border-radius: 4rpx;
  animation: wave-bounce 1.2s ease-in-out infinite;
}

@keyframes wave-bounce {
  0%, 40%, 100% {
    transform: scaleY(0.4);
  }
  20% {
    transform: scaleY(1);
  }
}

/* 脉冲加载器 */
.loading-pulse {
  width: 80rpx;
  height: 80rpx;
  position: relative;
}

.pulse-circle {
  width: 100%;
  height: 100%;
  background-color: #fff;
  border-radius: 50%;
  animation: pulse-scale 1s ease-in-out infinite;
}

@keyframes pulse-scale {
  0% {
    transform: scale(0);
    opacity: 1;
  }
  100% {
    transform: scale(1);
    opacity: 0;
  }
}

/* 内联样式 */
.loading-container.inline {
  position: relative;
  width: 100%;
  height: 200rpx;
  background-color: transparent;
}

.loading-container.inline .loading-content {
  background-color: transparent;
  padding: 20rpx;
  min-width: auto;
}

.loading-container.inline .loading-text {
  color: #666;
  font-size: 24rpx;
}

.loading-container.inline .circle {
  border-color: rgba(60, 197, 31, 0.3);
  border-top-color: #3cc51f;
}

.loading-container.inline .spinner-dot .dot,
.loading-container.inline .loading-dots .dot,
.loading-container.inline .wave-bar,
.loading-container.inline .pulse-circle {
  background-color: #3cc51f;
}

/* 小尺寸 */
.loading-container.small .loading-content {
  padding: 20rpx;
  min-width: 120rpx;
}

.loading-container.small .loading-spinner,
.loading-container.small .loading-circle,
.loading-container.small .loading-pulse {
  width: 50rpx;
  height: 50rpx;
}

.loading-container.small .spinner-dot {
  transform-origin: center 25rpx;
}

.loading-container.small .spinner-dot .dot {
  width: 4rpx;
  height: 12rpx;
}

.loading-container.small .loading-dots .dot {
  width: 10rpx;
  height: 10rpx;
}

.loading-container.small .loading-wave {
  height: 40rpx;
}

.loading-container.small .wave-bar {
  width: 6rpx;
  height: 15rpx;
}

.loading-container.small .loading-text {
  font-size: 24rpx;
  margin-top: 16rpx;
}