<!--components/loading/loading.wxml-->
<view class="loading-container" wx:if="{{show}}">
  <!-- 加载动画 -->
  <view class="loading-content">
    <view class="loading-spinner" wx:if="{{type === 'spinner'}}">
      <view class="spinner-dot" wx:for="{{12}}" wx:key="index" style="transform: rotate({{index * 30}}deg);">
        <view class="dot"></view>
      </view>
    </view>
    
    <view class="loading-circle" wx:elif="{{type === 'circle'}}">
      <view class="circle"></view>
    </view>
    
    <view class="loading-dots" wx:elif="{{type === 'dots'}}">
      <view class="dot dot1"></view>
      <view class="dot dot2"></view>
      <view class="dot dot3"></view>
    </view>
    
    <view class="loading-wave" wx:elif="{{type === 'wave'}}">
      <view class="wave-bar" wx:for="{{5}}" wx:key="index" style="animation-delay: {{index * 0.1}}s;"></view>
    </view>
    
    <view class="loading-pulse" wx:else>
      <view class="pulse-circle"></view>
    </view>
    
    <!-- 加载文字 -->
    <view class="loading-text" wx:if="{{text}}">{{text}}</view>
  </view>
  
  <!-- 遮罩层 -->
  <view class="loading-mask" wx:if="{{mask}}"></view>
</view>