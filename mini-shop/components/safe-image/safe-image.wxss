/* components/safe-image/safe-image.wxss */
.safe-image-container {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f6fa;
  overflow: hidden;
}

.safe-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  transition: opacity 0.3s;
  background: transparent;
}

.image-error {
  opacity: 0.5;
}

/* 骨架屏渐变动画 */
.skeleton {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  background: linear-gradient(90deg, #f5f6fa 25%, #e6e8ed 50%, #f5f6fa 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.2s infinite linear;
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  z-index: 1;
}

@keyframes skeleton-loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

/* 加载状态 */
.image-loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(255,255,255,0.6);
  border-radius: 12rpx;
  z-index: 2;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 5rpx solid #e0e0e0;
  border-top: 5rpx solid #07c160;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.loading-text {
  font-size: 24rpx;
  color: #07c160;
  font-weight: bold;
  letter-spacing: 2rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 错误状态 */
.image-error-placeholder {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  z-index: 3;
}

.default-image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 12rpx;
  opacity: 0.7;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  background: #f5f6fa;
}

.error-text {
  font-size: 22rpx;
  color: #ff4444;
  text-align: center;
  font-weight: bold;
  margin-top: 4rpx;
} 