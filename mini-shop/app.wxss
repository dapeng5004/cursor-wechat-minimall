/* 按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
  outline: none;
  cursor: pointer;
  transition: all 0.3s;
}

.btn-primary {
  background-color: #3cc51f;
  color: #fff;
}

.btn-primary:active {
  background-color: #2aad17;
}

.btn-secondary {
  background-color: #6c757d;
  color: #fff;
}

.btn-secondary:active {
  background-color: #5a6268;
}

.btn-outline {
  background-color: transparent;
  border: 2rpx solid #3cc51f;
  color: #3cc51f;
}

.btn-outline:active {
  background-color: #3cc51f;
  color: #fff;
}

.btn-small {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

.btn-large {
  padding: 30rpx 60rpx;
  font-size: 32rpx;
}

.btn-block {
  width: 100%;
}

.btn-disabled {
  opacity: 0.6;
  pointer-events: none;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 分割线 */
.divider {
  height: 2rpx;
  background-color: #eee;
  margin: 20rpx 0;
}

/* 价格样式 */
.price {
  color: #e54d42;
  font-weight: bold;
}

.price::before {
  content: '¥';
  font-size: 0.8em;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  border-radius: 4rpx;
  background-color: #f0f0f0;
  color: #666;
}

.tag-primary {
  background-color: #3cc51f;
  color: #fff;
}

.tag-danger {
  background-color: #e54d42;
  color: #fff;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

/* 固定底部 */
.fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-top: 2rpx solid #eee;
  z-index: 1000;
}